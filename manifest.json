{
  "name": "JSView",
  "manifest_version": 2,
  "version": "1.0",
  "description": "JSView for Chrome. View JS and CSS files.",

  "background": {  	
    "scripts": ["src/jsview.js"]
  },

  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/jsview-content.js"]
    }
  ],

  "icons": { 
      "16": "icons/file-js-16.png",
      "48": "icons/file-js-48.png",
      "128": "icons/file-js-128.png"
  },

  "permissions": ["contextMenus", "tabs", "webRequest", "webRequestBlocking", "http://*/*", "https://*/*"]
}